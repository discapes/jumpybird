{
  "name": "jumpybird",
  "version": "1.0.0",
  "description": "Classic arcade game.",
  "scripts": {
    "start": "serve public",
    "babel": "cross-env BABEL_ENV=production babel src -o public/build/bundle.js",
    "workbox": "rm -f public/workbox-*.js && workbox generateSW workbox-config.js",
    "cleancss": "cleancss -o public/build/styles.min.css src/*.css",
    "build": "concurrently npm:babel npm:cleancss npm:workbox",
    "watch-babel": "cross-env BABEL_ENV=development babel src -o public/build/bundle.js --watch",
    "watch-cleancss": "cleancss -o public/build/styles.min.css src/*.css --watch",
    "watch": "concurrently npm:watch-*"
  },
  "author": "Miika Tuominen",
  "devDependencies": {
    "@babel/cli": ">=7.18.9",
    "@babel/core": ">=7.18.9",
    "babel-preset-minify": ">=0.5.2",
    "clean-css-cli": ">=5.6.1",
    "concurrently": ">=7.3.0",
    "cross-env": ">=7.0.3",
    "serve": ">=14.0.1",
    "workbox-cli": "^6.5.3"
  }
}
